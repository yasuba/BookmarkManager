<ul id="links">
  <% @links.each do |link| %>
    <%= partial :link, :locals => {:link => link}  %>
  <% end %>
</ul>

<div id="tags">
  <h2>Available tags:</h2>
  <ul>
    <% @links.each do |link| %>
      <% link.tags.each do |tag| %>
        <li><%= link_to "/tags/#{tag.text}","#{tag.text}" %></li>
      <% end %>
    <% end %>
  </ul>
</div>


